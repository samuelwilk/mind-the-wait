{# Insight Card Component - For highlighting key findings #}
<div class="bg-{{ color|default('blue') }}-50 border border-{{ color|default('blue') }}-200 rounded-lg p-6">
    <div class="flex items-start">
        <div class="flex-shrink-0">
            {% if icon is defined %}
                <div class="h-10 w-10 rounded-full bg-{{ color|default('blue') }}-100 flex items-center justify-center">
                    {{ icon|raw }}
                </div>
            {% else %}
                <svg class="h-6 w-6 text-{{ color|default('blue') }}-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            {% endif %}
        </div>
        <div class="ml-4 flex-1">
            <h4 class="text-lg font-semibold text-{{ color|default('blue') }}-900">{{ title }}</h4>
            <div class="mt-2 text-sm text-{{ color|default('blue') }}-800">
                {{ content|raw }}
            </div>
            {% if action is defined %}
                <div class="mt-4">
                    <a href="{{ action.url }}" class="text-sm font-medium text-{{ color|default('blue') }}-700 hover:text-{{ color|default('blue') }}-800">
                        {{ action.label }}
                        <span aria-hidden="true"> &rarr;</span>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
