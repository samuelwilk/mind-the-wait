<div {{ attributes }}>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Top Performers -->
        <div class="bg-gray-50 rounded-lg border border-gray-200 p-6">
            <h3 class="text-base font-medium text-gray-700 mb-4">
                <span class="text-success-600">⭐</span> Top Performing Now
            </h3>
            {% if this.topPerformers|length > 0 %}
                <div class="space-y-3">
                    {% for route in this.topPerformers %}
                        <a href="{{ path('app_routes_show', {gtfsId: route.routeId}) }}" class="block">
                            {% include 'components/RouteListItem.html.twig' with {
                                route: route,
                                metadata: route.activeVehicles is not null ? route.activeVehicles ~ ' vehicle' ~ (route.activeVehicles > 1 ? 's' : '') ~ ' active' : null,
                                badgeSize: 'sm',
                                badgeFallbackBg: 'bg-primary-100',
                                badgeFallbackText: 'text-primary-800',
                                gradeColorClasses: 'bg-success-100 text-success-800'
                            } %}
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-gray-500 text-sm">No data available</p>
            {% endif %}
        </div>

        <!-- Routes Needing Attention -->
        <div class="bg-gray-50 rounded-lg border border-gray-200 p-6">
            <h3 class="text-base font-medium text-gray-700 mb-4">
                <span class="text-amber-600">⚠️</span> Needs Attention Now
            </h3>
            {% if this.needsAttention|length > 0 %}
                <div class="space-y-3">
                    {% for route in this.needsAttention %}
                        {% set issueText = route.issue is not null ? 'Issue: ' ~ (route.issue == 'limited_data' ? 'Limited data (1 vehicle)' : route.issue) : null %}
                        <a href="{{ path('app_routes_show', {gtfsId: route.routeId}) }}" class="block">
                            {% include 'components/RouteListItem.html.twig' with {
                                route: route,
                                metadata: issueText,
                                badgeSize: 'sm',
                                badgeFallbackBg: 'bg-amber-100',
                                badgeFallbackText: 'text-amber-800',
                                gradeColorClasses: route.grade == 'F' ? 'bg-danger-100 text-danger-800' : 'bg-warning-100 text-warning-800'
                            } %}
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-gray-500 text-sm">No data available</p>
            {% endif %}
        </div>
    </div>

    <!-- Last Update Indicator -->
    <div class="mt-2 text-right">
        <p class="text-xs text-gray-400">Last updated: {{ this.lastUpdate }}</p>
    </div>
</div>
