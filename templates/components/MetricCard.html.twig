{# Reusable Metric Card Component #}
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 card-shadow">
    <div class="flex items-center justify-between">
        <div class="flex-1">
            <p class="text-sm font-medium text-gray-600">{{ label }}</p>
            <p class="mt-2 text-3xl font-bold text-gray-900">{{ value }}</p>
            {% if change is defined %}
                <p class="mt-2 flex items-center text-sm">
                    {% if change > 0 %}
                        <svg class="h-5 w-5 text-success-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-success-700 font-medium ml-1">+{{ change }}%</span>
                    {% elseif change < 0 %}
                        <svg class="h-5 w-5 text-danger-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-danger-700 font-medium ml-1">{{ change }}%</span>
                    {% else %}
                        <span class="text-gray-500 font-medium">No change</span>
                    {% endif %}
                    <span class="text-gray-500 ml-1">from last period</span>
                </p>
            {% endif %}
        </div>
        {% if icon is defined %}
            <div class="ml-4">
                <div class="rounded-full bg-{{ iconColor|default('primary') }}-100 p-3">
                    {{ icon|raw }}
                </div>
            </div>
        {% endif %}
    </div>
</div>
