{% extends 'base.html.twig' %}

{% block title %}Overview - Saskatoon Transit{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Page Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Saskatoon Transit Overview</h1>
            <p class="mt-2 text-gray-600">Real-time performance insights and system health</p>
        </div>

        <!-- Live Weather Banner -->
        <div class="mb-8">
            <twig:LiveWeatherBanner />
        </div>

        <!-- Key Metrics Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            {% include 'components/MetricCard.html.twig' with {
                label: 'System Grade',
                value: metrics.systemGrade,
                change: metrics.changeVsYesterday
            } %}

            {% include 'components/MetricCard.html.twig' with {
                label: 'On-Time Performance',
                value: metrics.onTimePercentage ~ '%',
                change: metrics.changeVsYesterday
            } %}

            {% include 'components/MetricCard.html.twig' with {
                label: 'Active Vehicles',
                value: metrics.activeVehicles,
                change: null
            } %}

            {% include 'components/MetricCard.html.twig' with {
                label: 'Total Routes',
                value: metrics.totalRoutes,
                change: null
            } %}
        </div>

        <!-- Historical Performance (30-Day Average) - MOVED UP -->
        <div class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">Historical Performance</h2>
            <p class="text-sm text-gray-600 mb-4">Based on the last 30 days of recorded data â€¢ <a href="{{ path('app_routes_list') }}" class="text-primary-600 hover:text-primary-700 font-medium">View all routes â†’</a></p>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Historical Top Performers -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <span class="text-success-600">ðŸ“Š</span> Most Reliable Routes
                    </h3>
                    {% if metrics.historicalTopPerformers|length > 0 %}
                        <div class="space-y-3">
                            {% for route in metrics.historicalTopPerformers %}
                                <a href="{{ path('app_routes_show', {gtfsId: route.routeId}) }}" class="block">
                                    {% include 'components/RouteListItem.html.twig' with {
                                        route: route,
                                        metadata: route.onTimePercentage|round(1) ~ '% on-time average',
                                        badgeSize: 'sm',
                                        badgeFallbackBg: 'bg-success-100',
                                        badgeFallbackText: 'text-success-800',
                                        gradeColorClasses: 'bg-success-100 text-success-800'
                                    } %}
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-gray-500 text-sm">Not enough historical data yet. Check back after a few days of operation.</p>
                    {% endif %}
                </div>

                <!-- Historical Worst Performers -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <span class="text-danger-600">ðŸ“‰</span> Least Reliable Routes
                    </h3>
                    {% if metrics.historicalWorstPerformers|length > 0 %}
                        <div class="space-y-3">
                            {% for route in metrics.historicalWorstPerformers %}
                                {% set gradeColor = route.grade == 'F' ? 'bg-danger-100 text-danger-800' : (route.grade == 'D' ? 'bg-warning-100 text-warning-800' : 'bg-amber-100 text-amber-800') %}
                                <a href="{{ path('app_routes_show', {gtfsId: route.routeId}) }}" class="block">
                                    {% include 'components/RouteListItem.html.twig' with {
                                        route: route,
                                        metadata: route.onTimePercentage|round(1) ~ '% on-time average',
                                        badgeSize: 'sm',
                                        badgeFallbackBg: 'bg-danger-100',
                                        badgeFallbackText: 'text-danger-800',
                                        gradeColorClasses: gradeColor
                                    } %}
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-gray-500 text-sm">Not enough historical data yet. Check back after a few days of operation.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Live Data (Secondary) -->
        <div class="mb-8">
            <h2 class="text-xl font-medium text-gray-700 mb-2">Live Data</h2>
            <p class="text-sm text-gray-500 mb-4">Current snapshot â€¢ Updates every 30 seconds</p>

            <div data-controller="live-poll" data-live-poll-interval-value="30000">
                <twig:LiveDashboardData />
            </div>
        </div>

        <!-- Featured Insights -->
        <div class="mb-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Featured Insights</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {% include 'components/InsightCard.html.twig' with {
                    color: 'blue',
                    title: 'Winter Weather Impact',
                    content: '<p>Routes experience an average <strong>33% drop</strong> in on-time performance during snow conditions compared to clear weather.</p>',
                    action: {
                        label: 'View Full Analysis',
                        url: path('app_weather')
                    }
                } %}

                {% include 'components/InsightCard.html.twig' with {
                    color: 'amber',
                    title: 'Temperature Threshold',
                    content: '<p>Performance begins to degrade sharply when temperatures drop below <strong>-20Â°C</strong>, with delays increasing by 5-7 minutes on average.</p>',
                    action: {
                        label: 'View Full Analysis',
                        url: path('app_weather')
                    }
                } %}
            </div>
        </div>

        <!-- Phase 3 Complete Notice -->
        <div class="bg-gradient-to-r from-primary-50 to-primary-100 border border-primary-200 rounded-lg p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-primary-900">Phase 3 Complete!</h3>
                    <p class="mt-1 text-sm text-primary-800">
                        Route detail pages are now live with interactive ECharts visualizations showing 30-day performance trends, weather impact analysis, and time-of-day heatmaps.
                        <a href="{{ path('app_routes_list') }}" class="font-semibold underline hover:text-primary-900">Explore routes â†’</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
